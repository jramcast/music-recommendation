extends layout

block content
  h1 Recommendation
  p Based on your input:
  pre= preference.text
  p These audio features have been infered:
  ul
    li Acousticness #{recommendation.features.acousticness}
    li Danceability #{recommendation.features.danceability}
    li Instrumentalness #{recommendation.features.instrumentalness}
    li Energy #{recommendation.features.energy}
    li Valence #{recommendation.features.valence}

  p These are the tracks closest to those features:

  ol
  each recommendedTrack in recommendation.tracks
    li
      .title #{recommendedTrack.track.artist} - #{recommendedTrack.track.trackName}
      p Acousticness Distance: #{recommendedTrack.distance.acousticnessDistance.toFixed(8)}
      p Danceability Distance: #{recommendedTrack.distance.danceabilityDistance.toFixed(8)}
      p Instrumentalness Distance: #{recommendedTrack.distance.instrumentalnessDistance.toFixed(8)}
      p Energy Distance: #{recommendedTrack.distance.energyDistance.toFixed(8)}
      p Valence Distance: #{recommendedTrack.distance.valenceDistance.toFixed(8)}
      p
        iframe(
          style="border-radius:12px",
          src=`https://open.spotify.com/embed/track/${recommendedTrack.spotifyTrackID}?utm_source=generator`,
          width="500",
          height="200",
          frameBorder="0",
          allowfullscreen="",
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture",
          loading="lazy"
        )
      p Tags:
        each tag in recommendedTrack.tags 
          span  #{tag.tag}:#{tag.weight}
